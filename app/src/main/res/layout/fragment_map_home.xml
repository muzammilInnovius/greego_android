<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.MapHomeFragment">

        <fragment
            android:id="@+id/mgooleMap"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/ivMakerpin"
            android:layout_width="@dimen/scale_65dp"
            android:layout_height="@dimen/scale_65dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_e_pin" />


        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_10dp"
            android:layout_marginTop="@dimen/scale_75dp"
            android:background="@drawable/edt_box"
            android:drawableLeft="@mipmap/ic_bank2"
            android:drawablePadding="2dip"
            android:ellipsize="end"
            android:gravity="center|center_horizontal"
            android:paddingLeft="@dimen/scale_8dp"
            android:singleLine="true"
            android:text="@string/wheredogo"
            android:textColor="@color/edt_textColor" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAddress"
            android:layout_marginLeft="@dimen/scale_50dp"
            android:layout_marginRight="@dimen/scale_50dp"
            android:layout_marginTop="1dp">

            <RelativeLayout
                android:id="@+id/rlVwUpdateMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/map_button"
                android:visibility="invisible">

                <RelativeLayout
                    android:id="@+id/rlUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/txtVwUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:elevation="4dp"
                        android:padding="@dimen/scale_2dp"
                        android:text="@string/update"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_18"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/scale_25dp"
                    android:layout_height="@dimen/scale_25dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:layout_toRightOf="@+id/rlUpdate"
                    android:background="@drawable/round_bg">

                    <TextView
                        android:id="@+id/txtVwCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_16"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlUpdateData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlVwUpdateMain"
                android:background="@drawable/map_button"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/txtVwUpdateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_15dp"
                    android:layout_marginRight="@dimen/scale_15dp"
                    android:layout_marginTop="@dimen/scale_1dp"
                    android:gravity="center"
                    android:text="@string/update_note"
                    android:textColor="@color/app_bg"
                    android:textSize="@dimen/txt_11"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtVwUpdateTitle"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/scale_2dp">

                        <TextView
                            android:id="@+id/txtVwProfileNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/scale_15dp"
                            android:layout_marginTop="@dimen/scale_20dp"
                            android:gravity="center"
                            android:text="1."
                            android:textColor="@color/profile_no"
                            android:textSize="@dimen/txt_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtVwProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/scale_15dp"
                            android:layout_marginTop="@dimen/scale_20dp"
                            android:layout_toRightOf="@+id/txtVwProfileNo"
                            android:gravity="start"
                            android:text="@string/profile"
                            android:textColor="@color/profile_no"
                            android:textSize="@dimen/txt_14"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/scale_25dp"
                        android:layout_marginRight="@dimen/scale_25dp"
                        android:background="@color/txt_hint" />

                    <RelativeLayout
                        android:id="@+id/rlVehicleNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/scale_2dp">

                        <TextView
                            android:id="@+id/txtVwVehicleNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/scale_15dp"
                            android:gravity="center"
                            android:text="2."
                            android:textColor="@color/profile_no"
                            android:textSize="@dimen/txt_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtVwVehicleName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/scale_15dp"
                            android:layout_toRightOf="@+id/txtVwVehicleNo"
                            android:gravity="start"
                            android:text="@string/vehicle"
                            android:textColor="@color/profile_no"
                            android:textSize="@dimen/txt_14"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/scale_25dp"
                        android:layout_marginRight="@dimen/scale_25dp"
                        android:background="@color/txt_hint" />

                    <RelativeLayout
                        android:id="@+id/rlPaymentNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/scale_2dp">

                        <TextView
                            android:id="@+id/txtVwpaymentNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/scale_15dp"
                            android:gravity="center"
                            android:text="3."
                            android:textColor="@color/profile_no"
                            android:textSize="@dimen/txt_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtVwpayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/scale_15dp"
                            android:layout_toRightOf="@+id/txtVwpaymentNo"
                            android:gravity="start"
                            android:text="@string/payment"
                            android:textColor="@color/profile_no"
                            android:textSize="@dimen/txt_14"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/scale_25dp"
                        android:layout_marginRight="@dimen/scale_25dp"
                        android:background="@color/txt_hint" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/scale_15dp"
                        android:layout_marginLeft="@dimen/scale_25dp"
                        android:layout_marginRight="@dimen/scale_25dp" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>