<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.MapHomeFragment">

        <fragment
            android:id="@+id/mgooleMap"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/ivMakerpin"
            android:layout_width="@dimen/scale_65dp"
            android:layout_height="@dimen/scale_65dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_e_pin"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_10dp"
            android:layout_marginTop="@dimen/scale_85dp"
            android:background="@drawable/edt_box"
            android:drawableLeft="@mipmap/home"
            android:drawablePadding="2dip"
            android:ellipsize="end"
            android:gravity="center|center_horizontal"
            android:paddingLeft="@dimen/scale_8dp"
            android:singleLine="true"
            android:text="@string/wheredogo"
            android:textColor="@color/edt_textColor" />

        <!--<RelativeLayout-->
