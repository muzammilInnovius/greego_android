<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mytextview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Fragment.SettingFragment">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_40dp"
            android:background="@color/transparent"
            android:clickable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ibBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/scale_3dp"
                android:layout_marginRight="@dimen/scale_5dp"
                android:layout_marginTop="@dimen/scale_5dp"
                android:background="@android:color/transparent"
                android:padding="@dimen/scale_6dp"
                android:src="@mipmap/ic_back_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/scale_3dp"
                android:layout_marginRight="@dimen/scale_5dp"
                android:layout_marginTop="@dimen/scale_5dp"
                android:background="@android:color/transparent"
                android:padding="@dimen/scale_8dp"
                android:src="@mipmap/ic_edit"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/txt_3"
                android:layout_marginTop="@dimen/scale_5dp"
                android:text="@string/header_title"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_20"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/cVwSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            >
        <TextView
            android:id="@+id/tvSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/scale_10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold"
           />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cVwUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_25dp"
            app:layout_constraintTop_toBottomOf="@+id/cVwSetting"
            >

            <RelativeLayout
                android:id="@+id/rlName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingTop="@dimen/scale_10dp"
                android:paddingBottom="@dimen/scale_10dp">

                <com.greegoapp.Utils.RoundedImageView
                    android:id="@+id/ivProPic"
                    android:layout_width="@dimen/scale_50dp"
                    android:layout_height="@dimen/scale_50dp"
                    android:background="@mipmap/ic_profile"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/scale_10dp"
                    android:layout_centerVertical="true"
                    android:elevation="4dp"
                    app:border_color="@color/app_bg"
                    app:corner_radius="@dimen/scale_25dp"
                    app:round_background="true" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/scale_5dp"
                    android:layout_toRightOf="@+id/ivProPic"
                    >
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/scale_15dp"
                        android:layout_toRightOf="@+id/ivProPic"
                        android:text="@string/username"
                        tools:ignore="NotSibling" />
                    <TextView
                        android:id="@+id/tvJoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/scale_3dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/scale_10dp"
                        android:layout_below="@+id/tvUserName"
                        android:text="@string/join"/>
                    <TextView
                        android:id="@+id/tvJoinDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/scale_10dp"
                        android:layout_below="@+id/tvUserName"
                        android:layout_toRightOf="@+id/tvJoin"
                        android:text="@string/joinDate"/>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cVwUseremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_5dp"
            app:layout_constraintTop_toBottomOf="@+id/cVwUsername"
            >
            <RelativeLayout
                android:id="@+id/rlEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/scale_10dp"
                android:clickable="true"
                android:paddingBottom="@dimen/scale_10dp">

                <com.greegoapp.Utils.RoundedImageView
                    android:id="@+id/ivemail"
                    android:layout_width="@dimen/scale_50dp"
                    android:layout_height="@dimen/scale_50dp"
                    android:background="@mipmap/ic_mail"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/scale_10dp"
                    android:layout_centerVertical="true"
                    android:elevation="4dp"
                    app:border_color="@color/app_bg"
                    app:corner_radius="@dimen/scale_25dp"
                    app:round_background="true" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/scale_5dp"
                    android:layout_toRightOf="@+id/ivemail"
                    >
                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/scale_15dp"
                        android:layout_toRightOf="@+id/ivProPic"
                        android:text="@string/hint_email"
                        tools:ignore="NotSibling" />
                    <TextView
                        android:id="@+id/tvEmailVerify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/scale_6dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/scale_10dp"
                        android:layout_below="@+id/tvUserEmail"
                        android:text="@string/unverify"/>

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cVWPhoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_5dp"
            app:layout_constraintTop_toBottomOf="@+id/cVwUseremail"
            >
            <RelativeLayout
                android:id="@+id/rlPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingTop="@dimen/scale_10dp"
                android:paddingBottom="@dimen/scale_10dp">

                <com.greegoapp.Utils.RoundedImageView
                    android:id="@+id/ivphone"
                    android:layout_width="@dimen/scale_50dp"
                    android:layout_height="@dimen/scale_50dp"
                    android:background="@mipmap/ic_phone"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/scale_10dp"
                    android:layout_centerVertical="true"
                    android:elevation="4dp"
                    app:border_color="@color/app_bg"
                    app:corner_radius="@dimen/scale_25dp"
                    app:round_background="true" />

                    <TextView
                        android:id="@+id/tvUserPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/scale_15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ivphone"
                        android:text="@string/phone"
                        tools:ignore="NotSibling" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cVwLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_45dp"
            app:layout_constraintTop_toBottomOf="@+id/cVWPhoneno"
            >
            <RelativeLayout
                android:id="@+id/rlLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/scale_10dp"
                android:clickable="true"
                android:background="@drawable/help_button_bg"
               >

                <com.greegoapp.Utils.RoundedImageView
                    android:id="@+id/ivlogout"
                    android:layout_width="@dimen/scale_50dp"
                    android:layout_height="@dimen/scale_50dp"
                    android:background="@mipmap/ic_logout"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/scale_10dp"
                    android:layout_centerVertical="true"
                    android:elevation="4dp"
                    app:border_color="@color/app_bg"
                    app:corner_radius="@dimen/scale_25dp"
                    app:round_background="true" />

                <TextView
                    android:id="@+id/tvLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/scale_15dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivlogout"
                    android:text="@string/logout"
                    android:textColor="@color/black"
                    tools:ignore="NotSibling" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</layout>